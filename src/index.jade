extends _layouts/base

include _modules/logos/brand-power

block content
    main.intro
        a.intro__brand-power(href="/brand-power")
            .intro__background.intro__background--brand-power
                img(src="/images/intro/girl.jpg")
            .intro__brand
                .intro__brand-power-logo
                    .intro__brand-power-logo__top
                        svg
                            use(xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#brand-power-top")
                    .intro__brand-power-logo__bottom
                        svg
                            use(xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#brand-power-bottom")
                
                
                p.intro__slogan The power of third-party advertising.
        a.intro__home-tester-club
            .intro__background.intro__background--home-tester-club
                img(src="/images/intro/carts.jpg")
            .intro__brand
                .intro__home-tester-club-logo
                    img(src="/images/home-tester-club.png")
                p.intro__slogan The power of authentic p2p content.

